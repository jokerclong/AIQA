	width: 100vw;
	/* height: 100vh; */
	display: flex;
	flex-direction: column;
	align-items: center;
}
 

.sv {
	background-color: #fff;
	width: 100%;
}

 
.sendBar {
  border-top: 1px solid rgb(190, 190, 190);
  display: flex;
	width: 100%;
	height: 69px;
	flex-direction: row;
	align-items: center;
	justify-content: center;
  /* border: 2px solid #1E90FF; */
  background-color: rgb(246,249,252);
}
 
.input {
  background-color: white;
  position: relative;
  width: 75%;
  height: 80%;
  margin: auto;
	/* border: 2px solid #1E90FF; */
}
 
.box {
	width: 100vw;
	display: flex;
	flex-direction: row;
	margin-top: 2px;
  margin-bottom: 2px;
}
 
.item {
  margin-top: 10px;
	background-color: #fff;
	width: 100vw;
	min-height: 50px;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.item_user {
  margin-top: 10px;
	background-color: rgb(247,247,248);
	width: 100vw;
	min-height: 50px;
	display: flex;
	flex-direction: row-reverse;
	align-items: center;
}
 
.mineText {
  font-size: 16px;
  font-weight: 500;
  font-family:'宋体';
	color: #000;
}
 
.himText {
	font-size: 16px;
  font-weight: 500;
  font-family:'宋体';
	color: #000;
}
 
.adText {
	position: absolute;
	margin: auto;
	right: 20px;
}
.scrollBottom{
  height: 5px;
}
 .inputFather{
  background-color: #fff;
  height: 50%;
  width: calc(70% + 60px);
  display: flex;
  align-items: center;
  border-radius: 10px;
  box-shadow: 0px 0px 5px 1px rgb(190, 190, 190)
 }
.button {
  border-radius: 10px;
	background-color: #fff;
	width: 60px;
	height: 80%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
  /* margin-left: 20rpx; */
  position: relative;
}
 
.buttonText {
	height: 25px;
  width: 25px;
  
}
 
.mineAvatorSrc {
	height: 20px;
	width: 20px;
  position: relative;
  margin-left: 20rpx;
}
 
.himAvatorSrc {
	height: 20px;
	width: 20px;
	position: relative;
	right:20rpx;
}
 
.mineTextBox {
	background-color: #fff;
  max-width: 80%;
  color: #000;
	border-radius: 15rpx;
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 5px;
	padding-bottom: 5px;
	margin: auto;
	margin-left: 40rpx;
	display: block;
	text-overflow:ellipsis;
	word-wrap:break-word;
}
 
.himTextBox {
	background-color: rgb(247,247,248);
	max-width: 65%;
	border-radius: 15rpx;
	padding-left: 5px;
	padding-right: 5px;
	padding-top: 5px;
	padding-bottom: 5px;
	/* margin: auto; */
	margin-right: 40rpx;
	display: block;
	text-overflow:ellipsis;
	word-wrap:break-word;
}
